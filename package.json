{
    "name": "snsb",
    "displayName": "ServiceNow Script Bridge",
    "description": "Work with ServiceNow Ressource straight from Vs Code.",
    "version": "0.7.0",
    "publisher": "ambs",
    "repository": {
        "type": "git",
        "url": "https://github.com/Syspeople/snsb"
    },
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "title": "ServiceNow Scripting Bridge",
                "properties": {
                    "snsb.uploadOnSave": {
                        "type": "boolean",
                        "default": true,
                        "description": "Automatically upload record on save",
                        "scope": "window"
                    },
                    "snsb.addOnOpen": {
                        "type": "boolean",
                        "default": true,
                        "description": "On open automatically add record to workspace record if outdated",
                        "scope": "window"
                    },
                    "snsb.templates": {
                        "type": "array",
                        "description": "Define templates available when creating new records(Experimental)",
                        "scope": "window",
                        "items": {
                            "definitions": {},
                            "type": "object",
                            "title": "Template Schema",
                            "required": [
                                "name",
                                "class_name",
                                "template"
                            ],
                            "properties": {
                                "name": {
                                    "$id": "#/properties/name",
                                    "type": "string",
                                    "title": "The Name Schema",
                                    "default": "",
                                    "examples": [
                                        "templateName"
                                    ],
                                    "pattern": "^(.*)$"
                                },
                                "class_name": {
                                    "$id": "#/properties/class_name",
                                    "type": "string",
                                    "title": "The Class_name Schema",
                                    "default": "",
                                    "examples": [
                                        "sys_script_include"
                                    ],
                                    "pattern": "^(.*)$"
                                },
                                "template": {
                                    "$id": "#/properties/template",
                                    "type": "string",
                                    "title": "The Template Schema",
                                    "default": "",
                                    "examples": [
                                        "code"
                                    ],
                                    "pattern": "^(.*)$"
                                }
                            }
                        },
                        "default": [
                            {
                                "name": "DisplayName",
                                "class_name": "sys_script_include",
                                "template": "Code"
                            }
                        ]
                    }
                }
            }
        ],
        "configurationDefaults": {},
        "menus": {
            "explorer/context": [
                {
                    "group": "snsb",
                    "command": "snsb.updateRecord",
                    "when": "resourceScheme == file"
                },
                {
                    "group": "snsb",
                    "command": "snsb.saveRecord",
                    "when": "resourceScheme == file"
                },
                {
                    "group": "snsb",
                    "command": "snsb.openInPlatformRecord",
                    "when": "resourceScheme == file"
                },
                {
                    "group": "snsb",
                    "command": "snsb.openInPlatformList",
                    "when": "resourceScheme == file"
                },
                {
                    "group": "snsb",
                    "command": "snsb.deleteRecord",
                    "when": "resourceScheme == file"
                }
            ],
            "commandPalette": [
                {
                    "command": "snsb.saveRecord",
                    "when": "false"
                },
                {
                    "command": "snsb.updateRecord",
                    "when": "false"
                },
                {
                    "command": "snsb.openInPlatformRecord",
                    "when": "false"
                },
                {
                    "command": "snsb.openInPlatformList",
                    "when": "false"
                },
                {
                    "command": "snsb.deleteRecord",
                    "when": "false"
                }
            ]
        },
        "commands": [
            {
                "command": "snsb.openInPlatformRecord",
                "title": "Open Record in Platform",
                "category": "snsb"
            },
            {
                "command": "snsb.openInPlatformList",
                "title": "Open List in Platform",
                "category": "snsb"
            },
            {
                "command": "snsb.setUpdateset",
                "title": "Change Update Set",
                "category": "snsb"
            },
            {
                "command": "snsb.connect",
                "title": "Connect to ServiceNow",
                "category": "snsb"
            },
            {
                "command": "snsb.clearWorkSpaceState",
                "title": "Clear Instance",
                "category": "snsb"
            },
            {
                "command": "snsb.rebuildCache",
                "title": "Refresh Records",
                "category": "snsb"
            },
            {
                "command": "snsb.addRecord",
                "title": "Add Record to Workspace",
                "category": "snsb"
            },
            {
                "command": "snsb.saveRecord",
                "title": "Save Record",
                "category": "snsb"
            },
            {
                "command": "snsb.updateRecord",
                "title": "Update Record",
                "category": "snsb"
            },
            {
                "command": "snsb.createUpdateSet",
                "title": "Create Updateset",
                "category": "snsb"
            },
            {
                "command": "snsb.createRecord",
                "title": "Create Record",
                "category": "snsb"
            },
            {
                "command": "snsb.deleteRecord",
                "title": "Delete Record",
                "category": "snsb"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.0.0",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/opn": "^5.1.0",
        "axios": "^0.18.0",
        "opn": "^5.4.0"
    }
}